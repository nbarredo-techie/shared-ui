{
  "extends": "ts-config-single-spa",
  "compilerOptions": {
    "jsx": "react-jsx",
    "declarationDir": "dist",
    "baseUrl": ".",
    "lib": ["ES2022", "DOM"],
    "target": "ES2022",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node"]
  },
  "files": ["src/terraboost-shared-ui.tsx"],
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test*", "src/**/*.stories*", "node_modules"]
}
